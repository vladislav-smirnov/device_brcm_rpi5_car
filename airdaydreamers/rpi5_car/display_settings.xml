    <display name="port:0"
      shouldShowSystemDecors="true"
      shouldShowIme="true"
      forcedDensity="160" />

    <display name="port:1"
      shouldShowSystemDecors="true"
      shouldShowIme="true"
      forcedDensity="160" />

  <!-- Display settings for cluster -->
